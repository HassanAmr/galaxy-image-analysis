<tool id="csv2neo4j" name="csv2neo4j" version="0.1">
  <requirements>
    <requirement type="docker">neo4j</requirement>
  </requirements>
  <description>Import CSV files into a Neo4J database</description>
  <command><![CDATA[/var/lib/neo4j/bin/neo4j-import --into "${os.path.join($output.files_path,'neo4jdb')}"
  #set files = '" --nodes "'.join( [ str( $file ) for $file in $inputs ] )
"${files}" > ${output}]]></command>
  <inputs>
    <param name="inputs" type="data" format="csv" multiple="True" label="CSV files"/>
  </inputs>
  <outputs>
    <data format="Neo4jDB.Neo4jDB" hidden="false" name="output"/>
  </outputs>
  <help>Import CSV files into a Neo4J database.</help>
</tool>
